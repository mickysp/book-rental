</head>

<body>
    <!--เทมเพลตเดียวกับหมวดหมู่-->

    <%- include('./partials/nav.ejs') %>
    


     <!--ภาพปก-->

    <img  class="img_title" src="/images/7day.jpg" alt="" >
        <div class="index">
            <% if (books.length > 0) { %>
                <% books.forEach(book => { %>
                <div class="index_book">
                    <p>ชื่อเรื่อง: <%= book.title %></p>   
                    <img src="/images/<%= book.image %>" alt="" width="200px">
                    <br><br>
                    <button><a class="detail" href="/users/detail/<%= book.id %>">ดูรายละเอียด</a></button>
                    <br><br>
                    <form action="/add-to-cart/<%= book.id %>" method="POST">
                        <input type="number" name="quantity" id="quantity" value="1" min="1" hidden>
                        <button type="submit">Add to Cart</button>
                    </form>
                    <br><br>
                </div>
            <% }) %>
        </div>
        <% } else { %>
            
                There are no students to display
            
        <% } %>
  

    <%- include('./partials/footer.ejs') %>

</body>

